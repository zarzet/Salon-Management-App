<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="600.0" minWidth="900.0" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.AdminDashboardController">

    <left>
        <VBox prefHeight="600.0" prefWidth="220.0" spacing="10.0" style="-fx-background-color: #2C3E50;" BorderPane.alignment="CENTER">
            <children>
                <Label alignment="CENTER" prefHeight="60.0" prefWidth="220.0" text="SALON ADMIN" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>
                <Button fx:id="btnKaryawan" mnemonicParsing="false" onAction="#handleShowKaryawan" prefHeight="40.0" prefWidth="220.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT;" text="Kelola Karyawan">
                    <padding>
                        <Insets left="20.0" />
                    </padding>
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Button fx:id="btnLayanan" mnemonicParsing="false" onAction="#handleShowLayanan" prefHeight="40.0" prefWidth="220.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT;" text="Kelola Layanan">
                    <padding>
                        <Insets left="20.0" />
                    </padding>
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Button fx:id="btnLaporan" mnemonicParsing="false" onAction="#handleShowLaporan" prefHeight="40.0" prefWidth="220.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT;" text="Laporan Penjualan">
                    <padding>
                        <Insets left="20.0" />
                    </padding>
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <VBox alignment="BOTTOM_CENTER" prefHeight="350.0" prefWidth="220.0" VBox.vgrow="ALWAYS">
                    <children>
                        <Button fx:id="btnLogout" mnemonicParsing="false" onAction="#handleLogout" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #E74C3C; -fx-text-fill: white;" text="Logout" />
                    </children>
                    <padding>
                        <Insets bottom="20.0" />
                    </padding>
                </VBox>
            </children>
        </VBox>
    </left>

    <center>
        <StackPane prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>

                <VBox fx:id="viewKaryawan" prefHeight="200.0" prefWidth="100.0" spacing="15.0" style="-fx-background-color: #ECF0F1;">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                    <children>
                        <Label text="Manajemen Data Karyawan">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                        <HBox spacing="10.0">
                            <children>
                                <TextField fx:id="txtNamaKaryawan" promptText="Nama Karyawan" HBox.hgrow="ALWAYS" />
                                <ComboBox fx:id="cbRole" prefWidth="150.0" promptText="Pilih Role" />
                                <ComboBox fx:id="cbStatus" prefWidth="120.0" promptText="Status" />
                                <Button mnemonicParsing="false" onAction="#aksiTambahKaryawan" style="-fx-background-color: #27AE60; -fx-text-fill: white;" text="Tambah" />
                                <Button mnemonicParsing="false" onAction="#aksiHapusKaryawan" style="-fx-background-color: #C0392B; -fx-text-fill: white;" text="Hapus" />
                            </children>
                        </HBox>
                        <TableView fx:id="tableKaryawan" prefHeight="400.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colIdKaryawan" prefWidth="75.0" text="ID" />
                                <TableColumn fx:id="colNamaKaryawan" prefWidth="200.0" text="Nama" />
                                <TableColumn fx:id="colRole" prefWidth="150.0" text="Role" />
                                <TableColumn fx:id="colStatus" prefWidth="100.0" text="Status" />
                            </columns>
                        </TableView>
                    </children>
                </VBox>

                <VBox fx:id="viewLayanan" layoutX="10.0" layoutY="10.0" prefHeight="200.0" prefWidth="100.0" spacing="15.0" style="-fx-background-color: #ECF0F1;" visible="false">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                    <children>
                        <Label text="Manajemen Layanan Salon">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                        <HBox spacing="10.0">
                            <children>
                                <TextField fx:id="txtNamaLayanan" promptText="Nama Layanan" HBox.hgrow="ALWAYS" />
                                <TextField fx:id="txtHarga" prefWidth="150.0" promptText="Harga (Rp)" />
                                <TextField fx:id="txtDurasi" prefWidth="100.0" promptText="Durasi (Menit)" />
                                <Button mnemonicParsing="false" onAction="#aksiTambahLayanan" style="-fx-background-color: #2980B9; -fx-text-fill: white;" text="Simpan Layanan" />
                            </children>
                        </HBox>
                        <TableView fx:id="tableLayanan" prefHeight="400.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colIdLayanan" prefWidth="75.0" text="ID" />
                                <TableColumn fx:id="colNamaLayanan" prefWidth="250.0" text="Nama Layanan" />
                                <TableColumn fx:id="colHarga" prefWidth="150.0" text="Harga" />
                                <TableColumn fx:id="colDurasi" prefWidth="100.0" text="Durasi (Menit)" />
                            </columns>





                        </TableView>
                    </children>
                </VBox>

                <VBox fx:id="viewLaporan" alignment="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="200.0" prefWidth="100.0" style="-fx-background-color: #ECF0F1;" visible="false">
                    <children>
                        <Label text="Dashboard Laporan Penjualan">
                            <font>
                                <Font size="28.0" />
                            </font>
                        </Label>
                        <Label text="(Fitur Laporan Harian/Bulanan akan ditampilkan di sini)" textFill="#7f8c8d" />
                    </children>
                </VBox>

            </children>
        </StackPane>
    </center>
</BorderPane>