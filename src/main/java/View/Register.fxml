<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="450.0" prefWidth="500.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controller.RegisterController">

    <children>

        <!-- JUDUL -->
        <Label layoutX="170.0" layoutY="40.0"
               style="-fx-font-size: 24px; -fx-font-weight: bold;"
               text="Buat Akun Karyawan" />

        <!-- EMAIL -->
        <Label layoutX="80.0" layoutY="125.0" text="Email" />
        <TextField fx:id="tfEmail"
                   layoutX="150.0" layoutY="120.0"
                   prefWidth="250.0"
                   promptText="email@example.com" />

        <!-- PASSWORD -->
        <Label layoutX="80.0" layoutY="170.0" text="Password" />
        <PasswordField fx:id="tfPassword"
                       layoutX="150.0" layoutY="165.0"
                       prefWidth="250.0"
                       promptText="Minimal 6 karakter" />

        <!-- CONFIRM PASSWORD -->
        <Label layoutX="50.0" layoutY="215.0" text="Konfirmasi" />
        <PasswordField fx:id="tfConfirmPassword"
                       layoutX="150.0" layoutY="210.0"
                       prefWidth="250.0"
                       promptText="Ulangi password" />

        <!-- TOMBOL REGISTER -->
        <Button fx:id="btnRegister"
                layoutX="200.0" layoutY="270.0"
                prefWidth="120.0"
                text="Daftar"
                onAction="#onRegister"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />

        <!-- LINK KEMBALI KE LOGIN -->
        <Hyperlink fx:id="linkBackToLogin"
                   layoutX="170.0" layoutY="320.0"
                   text="Sudah punya akun? Login"
                   onAction="#onBackToLogin" />

        <!-- INFORMASI -->
        <Label layoutX="80.0" layoutY="365.0"
               style="-fx-font-size: 11px; -fx-text-fill: gray;"
               text="* Password minimal 6 karakter" />
        <Label layoutX="80.0" layoutY="385.0"
               style="-fx-font-size: 11px; -fx-text-fill: gray;"
               text="* Gunakan email yang valid" />

    </children>
</AnchorPane>
